<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/call_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_black_2px"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:drawableLeft="@drawable/ic_person_24px"
        android:drawablePadding="2sp"
        android:gravity="center_vertical"
        android:paddingLeft="2sp"
        android:paddingRight="2sp"
        android:singleLine="false"
        android:text="Unknown"
        android:textColor="@android:color/primary_text_light"
        android:textSize="18sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingStart="3sp"
        android:paddingEnd="3sp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/ic_business_14px"
            android:drawablePadding="2sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/org_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="TextView"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/org_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="TextView"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp" />
        </LinearLayout>
    </TableRow>

    <View
        android:id="@+id/org_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A8000000" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/ic_location_on_14px"
        android:drawablePadding="2sp"
        android:paddingStart="3sp"
        android:paddingEnd="3sp"
        android:text="Address"
        android:textColor="@android:color/primary_text_light" />

    <View
        android:id="@+id/address_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A8000000" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/ic_alternate_email_14px"
        android:drawablePadding="2sp"
        android:paddingStart="3sp"
        android:paddingEnd="3sp"
        android:text="Email"
        android:textColor="@android:color/primary_text_light" />

    <View
        android:id="@+id/email_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A8000000" />

    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/ic_notes_14px"
        android:drawablePadding="2sp"
        android:gravity="center_vertical"
        android:paddingLeft="3sp"
        android:paddingRight="3sp"
        android:text="Notes"
        android:textColor="@android:color/primary_text_light" />
</LinearLayout>